{
    // Base TypeScript configuration shared by tsconfig.app.json and tsconfig.node.json configs
    "compilerOptions": {
        "target": "ES2023",
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "noEmit": true,
        "incremental": true,

        /* Debugging */
        "sourceMap": true,
        "inlineSourceMap": false,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "erasableSyntaxOnly": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,

        /* Pathing */
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"],
            "source/*": ["./src/*"]
        }
    }
}
